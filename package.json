{
  "name": "constructive-line-bot",
  "version": "0.1.0",
  "description": "Simple Hono test server",
  "type": "module",
  "engines": {
    "node": ">=20.x",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --config bun.config.js",
    "test": "vitest",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "deploy": "vercel deploy --prod",
    "deploy:preview": "vercel deploy"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.1.17",
    "@hono/node-server": "^1.8.2",
    "@line/bot-sdk": "^9.7.1",
    "ai": "^4.1.47",
    "dotenv": "^16.4.7",
    "hono": "^4.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.11.20",
    "typescript": "^5.3.3",
    "vercel": "^41.3.0",
    "vitest": "^1.3.1"
  }
}